<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalheBibliotecaActivity"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalhes do livro"
            android:textColor="@color/textoEscuro"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="21dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imagemDetalheBibliotecaId"
            android:layout_width="100dp"
            android:layout_height="143dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="21dp"
            android:background="@color/cardview_dark_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="21dp"
            android:textSize="14dp"
            android:textColor="@color/textoHint"/>

        <EditText
            android:id="@+id/tituloDetalheBibliotecaId"
            android:layout_width="311dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="21dp"
            android:textSize="16dp"
            android:textColor="@color/detalheLaranja"
            android:background="@drawable/edit_text_style"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="21dp"
            android:textSize="14dp"
            android:textColor="@color/textoHint"/>

        <EditText
            android:id="@+id/autorDetalheBibliotecaId"
            android:layout_width="311dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="21dp"
            android:textSize="16dp"
            android:textColor="@color/detalheLaranja"
            android:background="@drawable/edit_text_style"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edição"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="21dp"
            android:textSize="14dp"
            android:textColor="@color/textoHint"/>

        <EditText
            android:id="@+id/edicaoDetalheBibliotecaId"
            android:layout_width="311dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="21dp"
            android:textSize="16dp"
            android:textColor="@color/detalheLaranja"
            android:background="@drawable/edit_text_style"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editora"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="21dp"
            android:textSize="14dp"
            android:textColor="@color/textoHint"/>

        <EditText
            android:id="@+id/editoraDetalheBibliotecaId"
            android:layout_width="311dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="21dp"
            android:textSize="16dp"
            android:textColor="@color/detalheLaranja"
            android:background="@drawable/edit_text_style"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="21dp"
            android:textSize="14dp"
            android:textColor="@color/textoHint"/>

        <EditText
            android:id="@+id/precoDetalheBibliotecaId"
            android:layout_width="311dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="21dp"
            android:textSize="16dp"
            android:textColor="@color/detalheLaranja"
            android:background="@drawable/edit_text_style"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_voltarDetalhe_id"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:text="@string/voltar"
                android:textColor="@color/detalheLaranja"
                android:background="@drawable/botao_branco"
                android:layout_marginTop="6dp"/>

            <Button
                android:id="@+id/btn_excluir_livro"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="36dp"
                android:background="@drawable/botao_laranja"
                android:text="@string/excluirLivro"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_editarDetalhe_id"
            android:layout_width="305dp"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:background="@drawable/botao_laranja"
            android:text="@string/editarLivro"
            android:textColor="@color/colorPrimary" />

</LinearLayout>