<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaDesejosFragment"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"
            android:text="@string/listaDesejo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/textoEscuro"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="12dp"
            android:text="@string/quantidadeLivros"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textoEscuro"/>

        <View
            android:layout_height="1dp"
            android:layout_width="327dp"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="16dp"
            android:background="@color/detalheLaranja" />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleId"
            android:layout_height="match_parent"
            android:layout_width="match_parent">


        </android.support.v7.widget.RecyclerView>

        <include layout="@layout/botao_flutuante" />

    </LinearLayout>

</FrameLayout>